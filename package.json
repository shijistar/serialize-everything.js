{
  "name": "serialize-everything.js",
  "version": "1.0.0-beta.1",
  "description": "A JavaScript library for serializing any value to strings, including primitives, functions, symbols, and more",
  "homepage": "https://github.com/shijistar/serialize-everything.js",
  "bugs": {
    "url": "https://github.com/shijistar/serialize-everything.js/issues"
  },
  "keywords": [
    "serialize",
    "serialization",
    "deserialization",
    "stringify",
    "parse",
    "json",
    "node.js",
    "browser",
    "jest",
    "e2e"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.js",
      "default": "./lib/index.js"
    },
    "./types": "./lib/types.d.ts",
    "./package.json": "./package.json"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "es",
    "umd",
    "LICENSE",
    "CHANGELOG.md",
    "README.md",
    "README.zh-CN.md"
  ],
  "devDependencies": {
    "@tiny-codes/code-style-all-in-one": "^1.1.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "codecov": "^3.8.3",
    "cross-env": "^7.0.3",
    "father": "^4.5.5",
    "jest": "^29.7.0",
    "npm-run-all2": "^8.0.3",
    "rollup": "^4.41.1",
    "shx": "^0.4.0",
    "ts-jest": "^29.3.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shijistar/serialize-everything.js.git"
  },
  "license": "MIT",
  "author": "李凤宝(Leo) <shijistar@gmail.com>",
  "sideEffects": false,
  "scripts": {
    "build": "run-p build:*",
    "build:es": "run-s task:build-es task:add-umd-banner",
    "build:lib": "run-s ts2lib task:copy-lib",
    "prepare": "husky",
    "prepublishOnly": "run-s build test",
    "task:add-umd-banner": "tsx scripts/add-umd-banner.ts",
    "task:build-es": "father build",
    "task:copy-lib": "tsx scripts/copy-lib.ts",
    "task:jest": "jest --coverage",
    "task:jest:lib": "jest --coverage -c jest-lib.config.js",
    "test": "npm run task:jest",
    "test-lib": "run-s ts2lib task:jest:lib",
    "ts2lib": "tsc -p tsconfig.lib.json"
  },
  "packageManager": "npm@11.4.1",
  "engines": {
    "node": ">=7.10.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
